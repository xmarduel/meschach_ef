	mv ./*wrap.c ./*.so ./*.o  ./LINUX_MAKEFILES

clean:
	$(RM) -rf $(BUILDDIR) ./LINUX_MAKEFILES/*wrap.o ./LINUX_MAKEFILES/*wrap.c ./LINUX_MAKEFILES/libmeschach.so ./LINUX_MAKEFILES/libmeschach_adds.so ./LINUX_MAKEFILES/libmeschach_lapack.so ./LINUX_MAKEFILES/libmeschach_spooles.so ./LINUX_MAKEFILES/libmeschach_ef.so ./LINUX_MAKEFILES/libsciplot.so ./LINUX_MAKEFILES/libmeschach_libsciplot.so ./LINUX_MAKEFILES/libvogle.so  ./LINUX_MAKEFILES/libvopl.so ./LINUX_MAKEFILES/libmeschach_vogle.so ./LINUX_MAKEFILES/libmeschach_cpgplot.so ./LINUX_MAKEFILES/1D.exe ./LINUX_MAKEFILES/2D.exe ./LINUX_MAKEFILES/3D.exe ./LINUX_MAKEFILES/1D_TR.exe ./LINUX_MAKEFILES/2D_TR.exe ./LINUX_MAKEFILES/meschach.so  ./LINUX_MAKEFILES/meschach_adds.so ./LINUX_MAKEFILES/meschach_ef.so ./LINUX_MAKEFILES/meschach_vogle.so ./LINUX_MAKEFILES/meschach_cpgplot.so ./LINUX_MAKEFILES/meschach_libsciplot.so ./LINUX_MAKEFILES/meschach_lapack.so ./LINUX_MAKEFILES/meschach_spooles.so

