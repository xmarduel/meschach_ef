# --------------------------------------------------------------

DEFINES = -DHAVE_X11 -DHAVE_CPGPLOT -DHAVE_VOGLE -DHAVE_LIBSCIPLOT -DHAVE_LUA -DHAVE_SILO -DHAVE_LAPACK -DANSI_C -DMESCHACH__ITER_EXTENSIONS

NO_WARNINGS =  -Wno-format \
	-Wno-parentheses \
	-Wno-pointer-sign \
	-Wno-incompatible-pointer-types \
	-Wno-incompatible-pointer-types-discards-qualifiers

#CFLAGS_OPT = -g
CFLAGS_OPT = -O3

X11_INCDIR = /usr/include

CFLAGS += $(CFLAGS_OPT) \
	$(NO_WARNINGS) \
	$(DEFINES) \
	-I$(X11_INCDIR) \
	-I./MESCHACH/INCLUDES \
